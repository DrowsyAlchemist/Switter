{
  "Jwt": {
    "Secret": "YourSuperSecretKeyForDevelopmentOnlyChangeInProduction",
    "Issuer": "twitter-clone-dev",
    "Audience": "twitter-clone-dev"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "tweet-route": {
        "ClusterId": "tweet-cluster",
        "Match": {
          "Path": "/api/tweets/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://authservice:80/"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user-service": {
            "Address": "http://userservice:80/"
          }
        }
      },
      "tweet-cluster": {
        "Destinations": {
          "tweet-service": {
            "Address": "http://tweetservice:80/"
          }
        }
      }
    }
  }
}